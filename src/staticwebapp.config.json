{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "*.{jpg,gif,png}",
            "assets/*",
            "/*.{css,scss,js}"
        ]
    },
    "routes": [
        {
            "route": "/*",
            "headers": {
                "cache-control":  "public, max-age=2592000"  // 1 month (in seconds)
            }
        }
    ]
}